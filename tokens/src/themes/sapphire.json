{
  "$schema": "https://tr.designtokens.org/format/",
  "color": {
    "theme": {
      "sapphire": {
        "center-channel-bg": {
          "$type": "color",
          "$value": "{color.foundation.neutral.0}"
        },
        "center-channel-color": {
          "$type": "color",
          "$value": "{color.foundation.neutral.900}"
        },
        "sidebar-bg": {
          "$type": "color",
          "$value": "#1543A3",
          "$description": "Custom sapphire blue value"
        },
        "sidebar-header-bg": {
          "$type": "color",
          "$value": "#123B91",
          "$description": "Custom darker sapphire value"
        },
        "sidebar-text": {
          "$type": "color",
          "$value": "{color.foundation.neutral.0}"
        },
        "sidebar-text-hover-bg": {
          "$type": "color",
          "$value": "#2A58BA",
          "$description": "Custom sapphire hover value"
        },
        "sidebar-header-text-color": {
          "$type": "color",
          "$value": "{color.foundation.neutral.0}"
        },
        "sidebar-unread-text": {
          "$type": "color",
          "$value": "{color.foundation.neutral.0}"
        },
        "sidebar-text-active-border": {
          "$type": "color",
          "$value": "{color.foundation.cyan.300}"
        },
        "sidebar-text-active-color": {
          "$type": "color",
          "$value": "{color.foundation.neutral.0}"
        },
        "sidebar-team-background": {
          "$type": "color",
          "$value": "#123582",
          "$description": "Custom sapphire team background"
        },
        "link-color": {
          "$type": "color",
          "$value": "{color.foundation.blue.600}"
        },
        "button-bg": {
          "$type": "color",
          "$value": "{color.foundation.blue.500}"
        },
        "button-color": {
          "$type": "color",
          "$value": "{color.foundation.neutral.0}"
        },
        "online-indicator": {
          "$type": "color",
          "$value": "{color.foundation.green.500}"
        },
        "away-indicator": {
          "$type": "color",
          "$value": "{color.foundation.yellow.500}"
        },
        "dnd-indicator": {
          "$type": "color",
          "$value": "{color.foundation.red.400}"
        },
        "mention-bg": {
          "$type": "color",
          "$value": "{color.foundation.neutral.0}"
        },
        "mention-color": {
          "$type": "color",
          "$value": "#1543A3",
          "$description": "Matches sidebar-bg"
        },
        "mention-highlight-bg": {
          "$type": "color",
          "$value": "{color.foundation.teal.200}"
        },
        "mention-highlight-link": {
          "$type": "color",
          "$value": "{color.foundation.teal.800}"
        },
        "error-text": {
          "$type": "color",
          "$value": "{color.foundation.red.300}"
        },
        "new-message-separator": {
          "$type": "color",
          "$value": "{color.foundation.yellow.400}"
        },
        "calls-bg": {
          "$type": "color",
          "$value": "#091D48",
          "$description": "Custom dark sapphire value"
        }
      }
    }
  }
}
