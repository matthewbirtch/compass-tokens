{
  "$schema": "https://tr.designtokens.org/format/",
  "elevation": {
    "foundation": {
      "1": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "2px",
          "blur": "3px",
          "spread": "0px",
          "color": "#00000014"
        },
        "$description": "Subtle elevation - hover states, small dropdowns"
      },
      "2": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "4px",
          "blur": "6px",
          "spread": "0px",
          "color": "#0000001F"
        },
        "$description": "Low elevation - buttons, chips, small cards"
      },
      "3": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "6px",
          "blur": "14px",
          "spread": "0px",
          "color": "#0000001F"
        },
        "$description": "Medium elevation - cards, menus, tooltips"
      },
      "4": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "8px",
          "blur": "24px",
          "spread": "0px",
          "color": "#0000001F"
        },
        "$description": "High elevation - modals, popovers, floating panels"
      },
      "5": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "12px",
          "blur": "32px",
          "spread": "0px",
          "color": "#0000001F"
        },
        "$description": "Higher elevation - dialogs, drawers"
      },
      "6": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "20px",
          "blur": "32px",
          "spread": "0px",
          "color": "#0000001F"
        },
        "$description": "Highest elevation - full-screen overlays, important modals"
      }
    }
  }
}
