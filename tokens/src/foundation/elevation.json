{
  "$schema": "https://tr.designtokens.org/format/",
  "elevation": {
    "foundation": {
      "1": {
        "$type": "shadow",
        "$value": {
          "offsetX": 0,
          "offsetY": 2,
          "blur": 3,
          "spread": 0,
          "color": "#00000014"
        },
        "$description": "Subtle elevation - hover states, small dropdowns"
      },
      "2": {
        "$type": "shadow",
        "$value": {
          "offsetX": 0,
          "offsetY": 4,
          "blur": 6,
          "spread": 0,
          "color": "#0000001F"
        },
        "$description": "Low elevation - buttons, chips, small cards"
      },
      "3": {
        "$type": "shadow",
        "$value": {
          "offsetX": 0,
          "offsetY": 6,
          "blur": 14,
          "spread": 0,
          "color": "#0000001F"
        },
        "$description": "Medium elevation - cards, menus, tooltips"
      },
      "4": {
        "$type": "shadow",
        "$value": {
          "offsetX": 0,
          "offsetY": 8,
          "blur": 24,
          "spread": 0,
          "color": "#0000001F"
        },
        "$description": "High elevation - modals, popovers, floating panels"
      },
      "5": {
        "$type": "shadow",
        "$value": {
          "offsetX": 0,
          "offsetY": 12,
          "blur": 32,
          "spread": 0,
          "color": "#0000001F"
        },
        "$description": "Higher elevation - dialogs, drawers"
      },
      "6": {
        "$type": "shadow",
        "$value": {
          "offsetX": 0,
          "offsetY": 20,
          "blur": 32,
          "spread": 0,
          "color": "#0000001F"
        },
        "$description": "Highest elevation - full-screen overlays, important modals"
      }
    }
  }
}
